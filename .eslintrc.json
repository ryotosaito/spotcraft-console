{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"alert": false,
		"document": false,
		"window": false
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"ecmaFeatures": { "jsx": true },
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"]
	}
}
